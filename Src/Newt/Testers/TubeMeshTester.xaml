<Window x:Class="Game.Newt.Testers.TubeMeshTester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tube Mesh Tester" Width="900" Height="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="Silver">
            <Button Height="23" Name="btnTestModel" VerticalAlignment="Top" Margin="11,11,19,0" Click="btnTestModel_Click">Test Model</Button>
            <Button Height="23" Margin="11,39,19,0" Name="btnCube" VerticalAlignment="Top" Click="btnCube_Click">Cube</Button>
            <Button Height="23" Margin="11,67,19,0" Name="btnCubeWithNormals" VerticalAlignment="Top" Click="btnCubeWithNormals_Click">Cube with normals</Button>

            <Button Height="23" Margin="11,120,19,0" Name="btnDissectMessage" VerticalAlignment="Top" Click="btnDissectMessage_Click">Dissect Message</Button>

            <Button Height="23" Margin="11,173,19,0" Name="btnSinglePolygon" VerticalAlignment="Top" Click="btnSinglePolygon_Click">Single Polygon</Button>
            <Button Height="23" Margin="11,203,19,0" Name="btnPolygonAndPoint" VerticalAlignment="Top" Click="btnPolygonAndPoint_Click">Polygon and Point</Button>
            <Button Height="23" Margin="11,233,19,0" Name="btnPointAndPolygon" VerticalAlignment="Top" Click="btnPointAndPolygon_Click">Point and Polygon</Button>
            <Button Height="23" Margin="11,264,19,0" Name="btnPolygonAndPolygon" VerticalAlignment="Top" Click="btnPolygonAndPolygon_Click">Polygon and Polygon</Button>
            <Button Height="23" Margin="11,298,19,0" Name="btnJewel" VerticalAlignment="Top" Click="btnJewel_Click">Jewel</Button>

            <CheckBox Height="16" Margin="96,0,0,110" Name="chkSoftSides" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="85">Soft Sides</CheckBox>

            <Label Height="28" Margin="11,0,0,127" Name="label1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="71">Num Sides</Label>
            <TextBox Text="3" Margin="11,0,0,110" Name="txtNumSides" HorizontalAlignment="Left" Width="71" Height="23" VerticalAlignment="Bottom" />
            
            <Label FontSize="16" Margin="11,0,0,51" VerticalAlignment="Bottom" HorizontalAlignment="Left">Lights</Label>
            <RadioButton Checked="radLight_Checked" Unchecked="radLight_Checked" IsChecked="True" Margin="11,0,0,37" Name="radLightStandard" VerticalAlignment="Bottom" HorizontalAlignment="Left">Standard</RadioButton>
            <RadioButton Checked="radLight_Checked" Unchecked="radLight_Checked" Margin="11,0,0,18" Name="radLightColored" VerticalAlignment="Bottom" HorizontalAlignment="Left">Colored</RadioButton>
        </Grid>

        <Grid Name="grdViewport" Grid.Column="1" Background="#404040">
            <Viewport3D Name="_viewport" IsHitTestVisible="False">
                <Viewport3D.Camera>
