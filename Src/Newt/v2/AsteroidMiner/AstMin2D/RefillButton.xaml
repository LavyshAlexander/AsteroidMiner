<Button x:Class="Game.Newt.v2.AsteroidMiner.AstMin2D.RefillButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Padding="8,-4">
    <StackPanel Orientation="Vertical">
        <Label Content="{Binding Text}" HorizontalAlignment="Center"/>

        <StackPanel Margin="0,-10,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="{Binding CreditsDisplay}" FontSize="10" FontWeight="bold"/>
            <Label Name="lblCreditsText" FontSize="10" Margin="-6,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Button>
